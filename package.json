{
  "name": "lerna-express-starter",
  "author": {
    "name": "James Hong",
    "url": "https://jamesyjhong.com"
  },
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "dependencies": {},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.34.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "find-up": "^6.3.0",
    "husky": "^8.0.1",
    "lerna": "^5.3.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "bootstrap": "lerna bootstarp --use-workspaces",
    "build": "lerna run build --parallel",
    "start:dev": "lerna run start:dev -- -r .env",
    "clean": "rm -rf ./packages/**/tsconfig.tsbuildinfo && rm -rf node_modules/.cache && lerna run clean",
    "lint": "lerna run lint --parallel",
    "test": "lerna run test --parallel",
    "lint-staged": "lint-staged"
  },
  "settings": {
    "rootProject.name": "lerna-express-starter"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json}": [
      "eslint --fix"
    ],
    "*.{js,ts,json,md}": [
      "prettier --write"
    ]
  }
}
